<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ch.hsr.mge.gadgeothek.NewReservationFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gadget_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gadget_no_data"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/gadget_icon"
            android:id="@+id/no_gadget_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gadget_no_data"
            android:id="@+id/gadget_no_data_text"
            android:layout_below="@id/no_gadget_image"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
